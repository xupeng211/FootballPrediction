# ==================================================
# 足球预测系统环境配置模板
# 复制为 .env 文件并填入实际配置
# ==================================================

# 应用环境设置
ENVIRONMENT=development  # development, staging, production

# ==================================================
# 数据库配置
# ==================================================

# 开发环境数据库
DB_HOST=localhost
DB_PORT=5432
DB_NAME=football_prediction_dev
DB_USER=football_user
DB_PASSWORD=football_pass

# 数据库连接池配置
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false
DB_ECHO_POOL=false

# 测试环境数据库
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=football_prediction_test
TEST_DB_USER=football_user
TEST_DB_PASSWORD=football_pass

# ==================================================
# Redis 配置
# ==================================================
REDIS_URL=redis://localhost:6379/0

# ==================================================
# API密钥配置（数据采集用）
# ==================================================

# API-Football 密钥（免费版每天100次请求）
# 注册地址：https://www.api-football.com/
API_FOOTBALL_KEY=your_api_football_key_here

# ==================================================
# 应用配置
# ==================================================

# FastAPI 配置
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# JWT配置（用于用户认证）
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ==================================================
# 日志配置
# ==================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# ==================================================
# AWS 部署配置（GitHub Secrets中配置）
# ==================================================
# 这些配置应该在GitHub仓库的Secrets中设置，不要写入.env文件

# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
