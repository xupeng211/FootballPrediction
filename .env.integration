# 集成测试环境配置
# 使用本地服务或模拟服务进行集成测试

# 数据库配置（使用PostgreSQL）
DB_HOST=localhost
DB_PORT=5432
DB_NAME=football_prediction_integration_test
DB_USER=football_user
DB_PASSWORD=football_integration_pass

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=redis_integration_pass

# Kafka配置
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=integration_test_

# Feast配置
FEAST_REPO_PATH=/tmp/feast_integration_test
FEAST_PROJECT_NAME=football_prediction_integration

# 应用配置
ENVIRONMENT=integration
SECRET_KEY=integration-test-secret-key
DEBUG=true
LOG_LEVEL=DEBUG

# MLflow配置
MLFLOW_TRACKING_URI=http://localhost:5002
MLFLOW_S3_ENDPOINT_URL=http://localhost:9000

# 测试配置
TEST_MODE=true
INTEGRATION_TEST=true
SKIP_EXTERNAL_DEPENDENCIES=false
