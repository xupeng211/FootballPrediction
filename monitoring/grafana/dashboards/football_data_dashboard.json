{
  "dashboard": {
    "id": null,
    "title": "Football Data Platform - 数据监控仪表盘",
    "tags": ["football", "data", "monitoring"],
    "style": "dark",
    "timezone": "Asia/Shanghai",
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "数据采集成功率",
        "type": "stat",
        "targets": [
          {
            "expr": "(1 - (rate(football_data_collection_errors_total[5m]) / rate(football_data_collection_total[5m]))) * 100",
            "legendFormat": "成功率"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 95}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "数据清洗成功率",
        "type": "stat",
        "targets": [
          {
            "expr": "(1 - (rate(football_data_cleaning_errors_total[5m]) / rate(football_data_cleaning_total[5m]))) * 100",
            "legendFormat": "清洗成功率"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 95}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "调度任务延迟时间",
        "type": "stat",
        "targets": [
          {
            "expr": "football_scheduler_task_delay_seconds",
            "legendFormat": "延迟(秒)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 300},
                {"color": "red", "value": 600}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "数据表行数统计",
        "type": "stat",
        "targets": [
          {
            "expr": "football_table_row_count",
            "legendFormat": "{{table_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "数据采集趋势",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(football_data_collection_total[5m])",
            "legendFormat": "采集速率(/秒)"
          },
          {
            "expr": "rate(football_data_collection_errors_total[5m])",
            "legendFormat": "错误速率(/秒)"
          }
        ],
        "yAxes": [
          {
            "label": "请求数/秒",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "数据库性能指标",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_activity_count",
            "legendFormat": "活跃连接数"
          },
          {
            "expr": "pg_stat_database_tup_inserted",
            "legendFormat": "插入行数"
          },
          {
            "expr": "pg_stat_database_tup_updated",
            "legendFormat": "更新行数"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "系统资源使用情况",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU使用率(%)"
          },
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "内存使用率(%)"
          }
        ],
        "yAxes": [
          {
            "label": "使用率(%)",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "应用响应时间分布",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50分位"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95分位"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "99分位"
          }
        ],
        "yAxes": [
          {
            "label": "响应时间(秒)",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 9,
        "title": "HTTP请求状态码分布",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"2..\"}[5m])",
            "legendFormat": "2xx成功"
          },
          {
            "expr": "rate(http_requests_total{status=~\"4..\"}[5m])",
            "legendFormat": "4xx客户端错误"
          },
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx服务器错误"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      }
    ]
  },
  "folderId": 0,
  "overwrite": true
}
