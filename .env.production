# 生产环境配置
# ⚠️ 警告：包含敏感信息，请勿提交到版本控制系统！

# === 应用基础配置 ===
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO
SECRET_KEY=CHANGE_ME_SUPER_SECRET_KEY_MINIMUM_32_CHARACTERS

# === 数据库配置 ===
DB_HOST=localhost
DB_PORT=5432
DB_NAME=football_prediction
DB_USER=football_user
DB_PASSWORD=CHANGE_ME_SECURE_DB_PASSWORD

# === Redis配置 ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_DB=0

# === API密钥配置 ===
FOOTBALL_API_KEY=CHANGE_ME_FOOTBALL_API_KEY
ODDS_API_KEY=CHANGE_ME_ODDS_API_KEY

# === JWT配置 ===
JWT_SECRET_KEY=CHANGE_ME_SUPER_SECRET_JWT_KEY_MINIMUM_32_CHARACTERS
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# === 服务器配置 ===
HOST=0.0.0.0
PORT=8000
WORKERS=4

# === 安全配置 ===
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_FRAME_DENY=True

# === CORS配置 ===
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# === 监控配置 ===
ENABLE_METRICS=True
PROMETHEUS_PORT=9090

# === 缓存配置 ===
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# === 文件存储配置 ===
UPLOAD_DIR=/var/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# === 邮件配置 ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=CHANGE_ME_EMAIL_PASSWORD

# === 日志配置 ===
LOG_FILE=/var/log/football_prediction/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# === 第三方服务配置 ===
SENTRY_DSN=CHANGE_ME_SENTRY_DSN
DATADOG_API_KEY=CHANGE_ME_DATADOG_KEY