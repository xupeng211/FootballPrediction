# ============================================================================
# 足球预测系统 - 环境配置模板
# ============================================================================

# === 应用基础配置 ===
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-this

# === JWT 认证配置 ===
JWT_SECRET_KEY=your-jwt-secret-key
JWT_REFRESH_SECRET_KEY=your-jwt-refresh-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# === API 安全配置 ===
API_KEY=your-api-key-here
API_SECRET_KEY=your-api-secret-key-here

# === 数据库配置 (REQUIRED) ===
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/football_prediction_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=football_prediction_dev
DB_USER=football_user
DB_PASSWORD=

# === Redis 配置 (REQUIRED) ===
REDIS_URL=redis://:password@localhost:6379/0
REDIS_PASSWORD=

# === MLflow 配置 ===
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=football_prediction

# === 应用服务器 ===
API_HOST=0.0.0.0
API_PORT=8000
