# Football Prediction System - Environment Configuration Template
# 复制此文件为 .env 并填入实际值

# =============================================================================
# 基础配置
# =============================================================================
# 环境名称: development | test | staging | production
ENVIRONMENT=development

# 调试模式: true | false
DEBUG=true

# 日志级别: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# API配置
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# =============================================================================
# 数据库配置
# =============================================================================
# 主数据库
DB_HOST=localhost
DB_PORT=5432
DB_NAME=football_prediction
DB_USER=football_user
DB_PASSWORD=your_password_here

# 数据库URL（可选，会自动生成）
# DATABASE_URL=postgresql://football_user:password@localhost:5432/football_prediction

# =============================================================================
# Redis配置
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Redis URL（可选，会自动生成）
# REDIS_URL=redis://:password@localhost:6379/0

# =============================================================================
# 安全配置
# =============================================================================
# JWT密钥（请生成强密码）
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# 应用密钥
SECRET_KEY=your_app_secret_key_here

# =============================================================================
# 外部服务配置
# =============================================================================
# API密钥
API_FOOTBALL_KEY=your_api_key_here

# =============================================================================
# MLflow配置（可选）
# =============================================================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=football_prediction

# =============================================================================
# 监控配置（可选）
# =============================================================================
# Prometheus
ENABLE_METRICS=true
METRICS_PORT=8080

# =============================================================================
# 开发专用配置
# =============================================================================
# 仅开发环境使用
PYTHONPATH=/app
APP_VOLUME=./:/app
BUILD_TARGET=development

# =============================================================================
# 生产专用配置
# =============================================================================
# 仅生产环境使用
# SSL_CERT_FILE=/path/to/cert.pem
# SSL_KEY_FILE=/path/to/key.pem
# FORCE_HTTPS=false