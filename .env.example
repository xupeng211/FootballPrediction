# ============================================================================
# Football Prediction System - Environment Configuration Template
# ============================================================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# ============================================================================

# === Application Configuration ===
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-please-change-this
PYTHONPATH=/app

# === JWT Authentication ===
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_REFRESH_SECRET_KEY=your-jwt-refresh-secret-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# === API Security ===
API_KEY=your-api-key-here
API_SECRET_KEY=your-api-secret-key-here
API_HOSTNAME=localhost

# === External API Keys ===
# Football Data API (https://www.football-data.org/)
FOOTBALL_API_TOKEN=your-football-data-api-token-here

# API Football (RapidAPI) (https://rapidapi.com/api-sports/api-football-v3)
RAPIDAPI_KEY=your-rapidapi-key-here
RAPIDAPI_HOST=api-football-v1.p.rapidapi.com

# Weather API (for weather-related predictions)
WEATHER_API_KEY=your-weather-api-key-here

# Betting APIs (if needed)
BET365_API_KEY=your-bet365-api-key-here
BETFAIR_API_KEY=your-betfair-api-key-here

# Third-party services
SLACK_WEBHOOK_URL=your-slack-webhook-url-here
EMAIL_API_KEY=your-email-service-api-key-here

# === Database Configuration (REQUIRED) ===
DATABASE_URL=postgresql+asyncpg://your_db_user:your_db_password@localhost:5432/football_prediction_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=football_prediction_dev
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# PostgreSQL Docker Configuration
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=football_prediction_dev

# === Redis Configuration (REQUIRED) ===
REDIS_URL=redis://:your_redis_password@localhost:6379/0
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379

# === MLflow Configuration ===
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=football_prediction
MLFLOW_BACKEND_STORE_URI=sqlite:///mlflow.db
MLFLOW_DEFAULT_ARTIFACT_ROOT=/mlflow/artifacts
MLFLOW_PORT=5000

# === Security Configuration ===
# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# HTTPS/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/app.crt
SSL_KEY_PATH=/etc/ssl/private/app.key
FORCE_HTTPS=true

# Security Headers
SECURE_HEADERS_ENABLED=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION=1; mode=block
STRICT_TRANSPORT_SECURITY=max-age=31536000; includeSubDomains

# Content Security Policy
CSP_ENABLED=true
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline'
CSP_STYLE_SRC='self' 'unsafe-inline'

# API Security
API_KEY_HEADER=X-API-Key
API_KEY_LENGTH=32
API_TOKEN_EXPIRE_HOURS=24

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Session Security
SESSION_TIMEOUT_MINUTES=30
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY_COOKIE=true
SESSION_SAMESITE_COOKIE=Strict

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=INFO
AUDIT_LOG_FILE=/var/log/app/audit.log

# === Application Server ===
API_HOST=0.0.0.0
API_PORT=8000

# === Docker Compose Configuration ===
APP_IMAGE=football-prediction
APP_TAG=latest
BUILD_TARGET=development
APP_VOLUME=./

# Nginx Configuration
NGINX_PORT=80
NGINX_SSL_PORT=443

# === Test Environment ===
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=football_prediction_test
TEST_DB_USER=postgres
TEST_DB_PASSWORD=postgres

# === Coverage Configuration ===
COVERAGE_THRESHOLD=80

# ============================================================================
# Optional: Feature Flags
# ============================================================================
ENABLE_CELERY=false
ENABLE_MLFLOW=false
ENABLE_NGINX=false

# ============================================================================
# Production-Only Settings (uncomment when deploying to production)
# ============================================================================
# ENVIRONMENT=production
# DEBUG=False
# LOG_LEVEL=WARNING
# BUILD_TARGET=production
