# ==================================================
# 足球预测系统环境配置模板
# 复制为 .env 文件并填入实际配置
# ==================================================

# 应用环境设置
ENVIRONMENT=development  # development, staging, production

# ==================================================
# 数据库配置
# ==================================================

# 主数据库配置（管理员用户）
DB_HOST=localhost
DB_PORT=5432
DB_NAME=football_prediction_dev
DB_USER=football_user
DB_PASSWORD=YOUR_SECURE_PASSWORD_HERE

# 多用户数据库配置（权限分离）
# 只读用户（分析、前端）
DB_READER_USER=football_reader
DB_READER_PASSWORD=__SET_DB_READER_PASSWORD__

# 读写用户（数据采集）
DB_WRITER_USER=football_writer
DB_WRITER_PASSWORD=__SET_DB_WRITER_PASSWORD__

# 管理员用户（运维、迁移）
DB_ADMIN_USER=football_admin
DB_ADMIN_PASSWORD=__SET_DB_ADMIN_PASSWORD__

# 数据库连接池配置
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false
DB_ECHO_POOL=false

# 测试环境数据库
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=football_prediction_test
TEST_DB_USER=football_user
TEST_DB_PASSWORD=__SET_TEST_DB_PASSWORD__

# ==================================================
# Redis 配置
# ==================================================
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379/0
REDIS_PASSWORD=__SET_REDIS_PASSWORD__

# ==================================================
# API密钥配置（数据采集用）
# ==================================================

# API-Football 密钥（免费版每天100次请求）
# 注册地址：https://www.api-football.com/
API_FOOTBALL_KEY=__SET_API_FOOTBALL_KEY__

# ==================================================
# 应用配置
# ==================================================

# FastAPI 配置
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# JWT配置（用于用户认证）
JWT_SECRET_KEY=__SET_JWT_SECRET_KEY__
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ==================================================
# 日志配置
# ==================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# ==================================================
# MinIO 对象存储配置（数据湖存储）
# ==================================================

# MinIO 服务配置
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=football_admin
MINIO_SECRET_KEY=__SET_MINIO_SECRET_KEY__
MINIO_REGION=us-east-1
MINIO_USE_SSL=false

# MinIO 桶配置
MINIO_BUCKET_PREFIX=football-lake
MINIO_BRONZE_BUCKET=football-lake-bronze
MINIO_SILVER_BUCKET=football-lake-silver
MINIO_GOLD_BUCKET=football-lake-gold
MINIO_ARCHIVE_BUCKET=football-lake-archive

# 数据湖存储配置
DATA_LAKE_COMPRESSION=snappy
DATA_LAKE_MAX_FILE_SIZE_MB=100

# ==================================================
# AWS 部署配置（GitHub Secrets中配置）
# ==================================================
# 这些配置应该在GitHub仓库的Secrets中设置，不要写入.env文件

# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
